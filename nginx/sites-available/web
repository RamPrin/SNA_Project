server {
    listen 443 ssl;
    listen [::]:443 ssl;
    include snippets/self-signed.conf;
    include snippets/ssl-params.conf;

    server_name  localhost snaproject.us.to www.snaproject.us.to;

    location / {
        root   html;
        index  index.html index.htm;
        proxy_pass http://127.0.0.1:8000;
    }
    location /static {
        autoindex on;
	alias /var/www/example.com/static;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   html;
    }

    ssl_certificate /etc/letsencrypt/live/snaproject.us.to/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/snaproject.us.to/privkey.pem; # managed by Certbot
}

server {
    if ($host = snaproject.us.to) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    listen [::]:80;
    server_name snaproject.us.to www.snaproject.us.to;

    return 302 https://$server_name$request_uri;


}
